<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.mtcoding.blog.model.BoardRepository">
   <select id="findAll" resultType="shop.mtcoding.blog.model.Board">
      select * from board_tb
   </select>

   <select id="findById" resultType="shop.mtcoding.blog.model.Board">
      select * from board_tb where id = #{id}
   </select>

   <insert id="insert">
      insert into board_tb ( title, content, user_id, created_at ) 
        values ( #{title}, #{content}, #{userId}, now() ) 
        where id = #{id}
   </insert>

   <update id="update">
      update board_tb set title = #{title}, content=#{content}, created_at=now() where id = #{id}@
   </update>

   <delete id="delete">
      delete from board_tb where id = #{id}
   </delete>
</mapper>